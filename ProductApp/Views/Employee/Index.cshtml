@using ProductApp.Models
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container"style="background-color:floralwhite">
    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="text-center">Walton Internship Employee Record </h3>
            <a class="btn btn-sm btn-success m-2" asp-controller="Employee"asp-action="Create">Create</a>
            <p class=" text-center text-success">@TempData["error"]</p>
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>Employee ID</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Salary</th>
                    <th>Action</th>
                </tr>
                @foreach(var d in Model)
                {
                    <tr class="text-center">
                        <td> @d.Id </td>
                        <td> @d.Name </td>
                        <td> @d.City </td>
                        <td> @d.State </td>
                        <td> @d.Salary </td>
                        <td>
                            <a class="btn  btn-sm btn-warning" asp-controller="Employee" asp-action="Edit" asp-route-id="@d.Id">Edit</a>
                            <a class="btn  btn-sm btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                        </td>
                    </tr>
                } 
            </table>
        </div>
    </div>
</div>

